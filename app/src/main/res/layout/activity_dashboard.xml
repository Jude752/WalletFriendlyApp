<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".DashboardActivity">

    <!-- Settings Button -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/theme"
        android:text="Settings"
        android:textSize="12sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Welcome TextView -->
    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="588dp"
        android:text="Welcome"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tracking TextView -->
    <TextView
        android:id="@+id/trackingTV"
        android:layout_width="346dp"
        android:layout_height="136dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="416dp"
        android:drawableLeft="@drawable/baseline_monetization_on_24"
        android:drawablePadding="16dp"
        android:text="Tracking Incomes and Expenses"
        android:textColor="@color/theme"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTV" />

    <!-- Set Goals TextView -->
    <TextView
        android:id="@+id/goalsTV"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="337dp"
        android:drawableLeft="@drawable/baseline_sports_score_24"
        android:drawablePadding="16dp"
        android:text="Set Goals"
        android:textColor="@color/theme"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackingTV" />

    <!-- Nearby Businesses TextView -->
    <TextView
        android:id="@+id/nearbyBusinessesTV"
        android:layout_width="355dp"
        android:layout_height="90dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="218dp"
        android:drawableLeft="@drawable/baseline_near_me_24"
        android:drawablePadding="16dp"
        android:text="Nearby Businesses"
        android:textColor="@color/theme"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalsTV" />

    <!-- Tips TextView -->
    <TextView
        android:id="@+id/tipsTV"
        android:layout_width="346dp"
        android:layout_height="57dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="123dp"
        android:drawableLeft="@drawable/baseline_tips_and_updates_24"
        android:drawablePadding="16dp"
        android:text="Tips"
        android:textColor="@color/theme"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearbyBusinessesTV" />

</androidx.constraintlayout.widget.ConstraintLayout>
